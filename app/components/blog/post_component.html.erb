<% if @post.cover_image.blank? %>
  <div class="prose mt-8">
    <h1 class="text-center">
      <%= @post.title %>
    </h1>

    <div class="flex items-center justify-center text-small">
      <%= @post.published_at %>
    </div>
  </div>
<% else %>
  <div
    class="hero h-96 w-full mb-8"
    style="background-image: url(<%= url_for @post.cover_image %>);">
    <div class="hero-overlay"></div>
    <div class="hero-content text-neutral-content text-center">
      <div class="max-w-md">
        <h1 class="mb-5 text-5xl font-bold"><%= @post.title %></h1>
        <p class="mb-5">
          <%= @post.published_at %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<article data-controller="markdown--content" class="prose w-full mx-auto my-8" data-turbo="false">
  <%== @markdown.render @post.content %>
</article>