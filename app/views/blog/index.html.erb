<div class="grid grid-flow-row grid-cols-5 grid-rows-1">

  <div class="col-span-2 h-screen">
    <div class="grid grid-flow-row grid-cols-2 grid-rows-1">
      <div class="col-span-1 bg-base-200 p-4 h-screen">
        <div class="flex flex-col justify-between h-full">
          <div class="prose">
            <h1>
              DalenW.com
            </h1>

            <p>
              Welcome to my website.
            </p>
          </div>

          <div>
            <p>
              Footer <a href="<%= new_session_path %>" class="">Sign In</a>
            </p>
          </div>
        </div>

      </div>

      <div class="col-span-1 bg-base-200 p-4">
        <% @posts.each do |post| %>
          <a href="<%= blog_post_path post.path %>">
            <div class="w-100 prose">
              <h3><%= post.title %></h3>
              <p><%= post.description %></p>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-span-3">
    <div class="p-4 h-screen w-full">
      <%= turbo_frame_tag @turbo_frame_tag, src: blog_post_path(@post.path), loading: :lazy do %>
        <article data-controller="markdown--content" class="prose w-full mx-auto overscroll-none" data-turbo="false">
          <%== @markdown.render @post.content %>
        </article>
      <% end %>
    </div>

  </div>
</div>