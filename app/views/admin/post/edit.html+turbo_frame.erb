<%= turbo_frame_tag @turbo_frame_tag do %>
  <form>
    <div class="flex justify-between mb-4">
      <p class="text-xl">
        Edit Post
      </p>

      <div class="flex justify-end">
        <button type="submit" class="btn btn-success">
          Save
        </button>
      </div>
    </div>

    <div class="card bg-base-200 shadow-sm">
      <div class="card-body">
        <div class="flex">
          <%= render Form::InputComponent.new(name: "create[title]", title: "Title", placeholder: "A cool title", value: @post.title) %>

          <%= render Form::InputComponent.new(name: "create[path]", title: "Path", placeholder: "something", value: @post.path) %>

          <%= render Form::InputComponent.new(name: "create[description]", title: "Description", placeholder: "A short summary", value: @post.description) %>
        </div>

        <%= render Form::StackeditComponent.new %>

      </div>
    </div>
  </form>

<% end %>